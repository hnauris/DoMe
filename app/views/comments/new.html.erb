<div class="well">
    <h2 style="font-weight:bold"><%= @post.title %></h2>
    <p><%= @post.description %></p>
</div>
</hr>

<div class="well">
    <% @comments.each do |x| %>
        <small style="color:blue"><%= current_user.email %></small><br></br>
        <p><%= x.text %></p>
        <small><%= x.created_at %></small>
        <hr></hr>
    <% end %>
</div>
<hr></hr>
<%= form_for @comment, ur: url_for(:controller => :comments, :action => "create") do |f|%>
<div class="form-group">
    <div class="col-sm-8">
      <%= f.text_area :text, size:"60x7" %>
    </div>
    <div class="col-sm-10">
      </br>
      <%= hidden_field_tag "group_id", @group.id %>
      <%= f.button :submit, name: "post_id", value: @post.id, class: 'btn btn-primary btn-lg' %>
    </div>
</div>
<% end %>