<h2>Creating a new post for <%= @date %> </h2>
<hr></hr>
<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<%= form_for @post, url: url_for(:controller => :posts, :action => 'create') do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :title %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :title %>
    </div>
    <div class="control-label col-sm-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :description, class: 'form-control', placeholder: '....', autofocus: true %>
      <%= f.hidden_field :date, :value => params[:date] %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      </br>
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>