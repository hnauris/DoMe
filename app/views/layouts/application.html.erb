<!DOCTYPE html>
<html>
  <head>
    <title>Dome</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-static-top" id="topnavbar">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top_navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="top_navbar" class="navbar-collapse collapse">
          <% if !user_signed_in? %>
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "Home", root_path %>
              </li>
              <li>
                <%= link_to "About", about_path %>
              </li>
              <li>
                <%= link_to "Contact", contact_path %>
              </li>
            </ul>
          <% else %>
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", groups_path %>
            </li>
            <li>
              <%= link_to "News", about_path %>
            </li>
            <li>
              <%= link_to "Daily Fokume", contact_path %>
            </li>
          </ul>
          <% end %>
          <ul class="nav navbar-nav navbar-right">
            <% if !user_signed_in? %>
              <li><%= link_to "Sign in", new_user_session_path %></li>
            <% else %>
              <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Action</a></li>
                  <li><a href="#">Another action</a></li>
                  <li><a href="#">Something else here</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <% flash.each do |name, msg| %>
            <div class='"alert alert-<%="#{name}" %>'>
              <a href="#" class="close" data-dismiss="alert"></a>
              <%= content_tag :div, msg, :id => "flash_#{name}", align: 'center' if msg.is_a?(String) %>
            </div>
          <% end %>
        </div>
      </div>
    <%= yield %>

    </div>
    <!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </body>
</html>
